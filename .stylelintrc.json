{
  "extends": ["stylelint-config-sass-guidelines", "stylelint-config-tailwindcss/scss"],
  "rules": {
    "selector-max-id": 1,
    "max-nesting-depth": 3,
    "selector-max-compound-selectors": 4,
    "selector-no-qualifying-type": null,
    "selector-class-pattern": "^[a-zA-Z]+([a-zA-Z0-9-_]+[a-zA-Z0-9]+)*$"
  }
}
